  "version": "2.0.0",
  "tasks": [
    {
      "label": "runDevelopment",
      "dependsOn": ["start", "serve"],
      "problemMatcher": []
    },
    {
      "label": "runDevelopmentWlan",
      "dependsOn": ["start", "serveWlan"],
      "problemMatcher": []
    },
    {
      "label": "runDevelopmentWin",
      "dependsOn": ["startwin", "serve"],
      "problemMatcher": []
    },
    {
      "label": "start",
      "type": "shell",
      "command": "cd ../api && npm run start:debug",
      "presentation": {
        "panel": "dedicated"
      }
    },
    {
      "label": "startwin",
      "type": "shell",
      "command": "cd ../api; npm run start:win",
      "presentation": {
        "panel": "dedicated"
      }
    },
    {
      "label": "serve",
      "type": "shell",
      "command": "npm run serve",
      "presentation": {
        "panel": "dedicated"
      }
    },
    {
      "label": "serveWlan",
      "type": "shell",
      "command": "npm run serve:wlan",
      "presentation": {
        "panel": "dedicated"
      }
    }
  ]
}
